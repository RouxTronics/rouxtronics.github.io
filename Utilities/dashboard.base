filters:
  and:
    - file.ext == "md"
views:
  - type: table
    name: Posts
    filters:
      and:
        - file.folder.contains("_posts")
    order:
      - file.name
      - title
      - published
    columnSize:
      note.title: 257
  - type: table
    name: Drafts
    filters:
      and:
        - file.folder == "_drafts"
  - type: table
    name: Published
    filters:
      and:
        - file.folder.contains("_posts")
        - published == true
